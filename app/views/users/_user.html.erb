<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
      <p align="right">
       <%=  link_to "delete", user, method: :delete,data: { confirm: "100% sure?"},
                    class: "btn btn-danger" %>
      </p>
  <% end %>
</li>