<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
  </span>
  <h7>Movie Name: </h7>
  <span style="color:#4874DB;font-weight:bold" class="movie"><%= feed_item.movie %></span>
  <h7>Movie Comment: </h7>
  <span style="color:#7C58A8;font-weight:bold" class="comment"><%= feed_item.comment %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
      <%= link_to "delete", feed_item, method: :delete,
                  data: { confirm: "100% sure?" } %>
  <% end %>
</li>